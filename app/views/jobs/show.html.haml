%h2 Details about #{@job.title}

%ul#details
  %li
    Start
    = @job.start.strftime("%B %Y")
  %li
    End
    - if @job.end.nil?
      = 'Present'
    - else
      = @job.end.strftime("%B %Y")

= link_to 'Edit info', edit_job_path(@job)
= button_to 'Delete', job_path(@job), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to Jobs list', jobs_path
